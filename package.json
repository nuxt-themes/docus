{
  "name": "@nuxt-themes/docus",
  "version": "1.15.1",
  "type": "module",
  "main": "./nuxt.config.ts",
  "packageManager": "pnpm@9.12.3",
  "repository": "nuxt-themes/docus",
  "files": [
    "app",
    "assets",
    "components",
    "composables",
    "layouts",
    "plugins",
    "server",
    "nuxt.schema.ts",
    "app.vue",
    "app.config.ts",
    "nuxt.config.ts",
    "tokens.config.ts"
  ],
  "scripts": {
    "prepare": "nuxi prepare && nuxi prepare .starters/default",
    "dev": "nuxi dev .starters/default",
    "build": "nuxi build .starters/default",
    "generate": "nuxi generate .starters/default",
    "preview": "nuxi preview .starters/default",
    "lint": "eslint .",
    "release": "release-it",
    "test:browser": "playwright test test/browser",
    "test:browser:update": "docker run --rm --network host -v $(pwd):/work/ -w /work/ -it mcr.microsoft.com/playwright:v1.48.0-focal bash -c 'corepack enable && pnpm i && pnpm playwright test test/browser --update-snapshots'"
  },
  "dependencies": {
    "@nuxt-themes/elements": "^0.9.5",
    "@nuxt-themes/tokens": "^1.9.1",
    "@nuxt-themes/typography": "^0.11.0",
    "@nuxt/content": "^2.13.4",
    "@nuxt/kit": "^3.14.159",
    "@nuxthq/studio": "^2.2.1",
    "@nuxtjs/color-mode": "^3.5.2",
    "@vueuse/integrations": "^11.2.0",
    "@vueuse/nuxt": "^11.2.0",
    "focus-trap": "^7.6.0",
    "fuse.js": "^7.0.0",
    "jiti": "^1.21.6"
  },
  "devDependencies": {
    "@algolia/client-search": "^4.24.0",
    "@docsearch/css": "^3.7.0",
    "@docsearch/js": "^3.7.0",
    "@nuxt/devtools": "^1.6.0",
    "@nuxt/eslint-config": "^0.6.1",
    "@nuxt/test-utils": "^3.14.4",
    "@nuxtjs/algolia": "^1.10.2",
    "@playwright/test": "^1.48.2",
    "@types/node": "^22.9.0",
    "eslint": "^9.14.0",
    "nuxt": "^3.14.159",
    "release-it": "^17.10.0",
    "typescript": "^5.6.3",
    "vite-plugin-inspect": "^0.8.7",
    "vitest": "^2.1.4",
    "vue": "^3.5.12"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "axios": "0.25.0",
        "vite": "*"
      },
      "ignoreMissing": [
        "postcss",
        "postcss-*",
        "webpack",
        "axios",
        "vite"
      ]
    }
  },
  "license": "MIT",
  "release-it": {
    "npm": {
      "access": "public"
    },
    "git": {
      "commitMessage": "chore(release): release v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}"
    }
  }
}
