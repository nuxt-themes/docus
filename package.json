{
  "name": "@nuxt-themes/docus",
  "version": "1.6.2",
  "type": "module",
  "main": "./nuxt.config.ts",
  "files": [
    "app",
    "assets",
    "components",
    "composables",
    "layouts",
    "plugins",
    "nuxt.schema.ts",
    "app.vue",
    "nuxt.config.ts",
    "tokens.config.ts"
  ],
  "scripts": {
    "prepare": "nuxi prepare && nuxi prepare .docs && nuxi prepare .playground",
    "play": "nuxi dev .playground/",
    "dev": "nuxi dev .docs/",
    "build": "nuxi build .docs/",
    "generate": "nuxi generate .docs/",
    "preview": "nuxi preview .docs/",
    "lint": "eslint .",
    "release": "release-it"
  },
  "dependencies": {
    "@nuxt-themes/elements": "^0.5.2",
    "@nuxt-themes/tokens": "^1.6.2",
    "@nuxt-themes/typography": "^0.6.0",
    "@nuxt/content": "^2.4.1",
    "@nuxthq/studio": "^0.6.5",
    "@vueuse/nuxt": "^9.11.1"
  },
  "devDependencies": {
    "@algolia/client-search": "^4.14.3",
    "@docsearch/css": "^3.3.2",
    "@docsearch/js": "^3.3.2",
    "@nuxtjs/algolia": "^1.5.0",
    "@nuxtjs/eslint-config-typescript": "^12.0.0",
    "eslint": "^8.32.0",
    "nuxt": "3.1.1",
    "nuxt-plausible": "^0.1.2",
    "release-it": "^15.6.0",
    "typescript": "^4.9.4",
    "vue": "^3.2.45"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "axios": "0.25.0"
      },
      "ignoreMissing": [
        "postcss",
        "postcss-*",
        "webpack",
        "axios"
      ]
    }
  },
  "release-it": {
    "hooks": {
      "before:init": [
        "pnpm build"
      ]
    },
    "npm": {
      "access": "public"
    },
    "git": {
      "commitMessage": "chore(release): release v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}"
    }
  }
}
